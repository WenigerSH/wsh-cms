{% extends 'WshCmsBundle::standard_layout.html.twig' %}
    {% block title %}
        {{ "profile.edit_password"|trans() }}
    {% endblock %}
{% block body_content %}
    <div class="box span11">
        <div class="box-header well" data-original-title="{{ app.user.username }} profile">
            <h2><i class="halflings-icon list"></i><span class="break"></span>{{ "profile.edit_password"|trans() }}</h2>
        </div>
        <div class="box-content">
            <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
                <fieldset>
                    {{ form_widget(form) }}
                </fieldset>
                <div class="form-actions">
                    <input type="submit" class="btn btn-primary" value="{{ 'change_password.submit'|trans({}, 'FOSUserBundle') }}" />
                    <a href="{{ path('sonata_user_profile_show') }}" class="btn">{{ "back_to_profile"|trans() }}</a>
                </div>
            </form>
        </div>
    </div>
{%  endblock %}