{% extends 'WshCmsHtmlBundle::layout.html.twig' %}
{% block body %}
<div class="row-fluid">		
				<div class="box span12">
					<div class="box-header" data-original-title="">
						<h2><i class="fa-icon-comments"></i><span class="break"></span>Blog posts</h2>
						<span class="break"></span><a href="{{ path("blogForm") }}">Add new</a>
					</div>
					<div class="box-content">
						<table class="table table-striped table-bordered bootstrap-datatable datatable">
						  <thead>
							  <tr>
								  <th><input type="checkbox"></th>
								  <th>Title</th>
								  <th>Lead text</th>
								  <th>Author</th>
								  <th>Categories</th>
								  <th>Tags</th>
								  <th>Last modified</th>
								  <th>Created</th>
							  </tr>
						  </thead>   
						  <tbody>
						  	{% for page in pages %}
								<tr>
									<td>
										<input type="checkbox">
									</td>
									<td class="identifier">
										{{ page.title}}
										<div class="options">
											<a href="{{ path("pageForm") }}">Edit</a> | 
											<a href="#">View</a> | 
											<a href="#">Hide</a> | 
											<a href="">Delete</a>
										</div>
									</td>
									<td>{{ page.leadText|truncate(50) }}</td>
									<td>{{ page.author }}</td>
									<td>{% for category in page.categories %}{{ category }} {% endfor %}</td>
									<td>{% for tag in page.tags %}{{ tag }} {% endfor %}</td>
									<td class="center">
										{{ page.lastModifiedAt|date("d/m/Y")}} by {{ page.lastModifiedBy }}
									</td>
									<td class="center">{{ page.created|date("d/m/Y") }}</td>
								</tr>						  		
						  	{% endfor %}
						  </tbody>
					  </table>            
					</div>
				</div><!--/span-->
			
			</div><!--/row-->
{% endblock body %}