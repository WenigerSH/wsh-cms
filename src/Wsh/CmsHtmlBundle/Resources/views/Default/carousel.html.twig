{% extends 'WshCmsHtmlBundle::layout.html.twig' %}
{% block body %}
<div class="row-fluid">		
				<div class="box span12">
					<div class="box-header" data-original-title="">
						<h2><i class="fa-icon-picture"></i><span class="break"></span>Carousel slides</h2>
						<span class="break"></span><a href="{{ path("carouselForm") }}">Add new</a>
					</div>
					<div class="box-content">

						<table class="table table-striped table-bordered bootstrap-datatable datatable">
						  <thead>
							  <tr>
								  <th><input type="checkbox"></th>
								  <th>Caption</th>
								  <th>Media</th>
								  <th>Last modified</th>
								  <th>Created</th>
							  </tr>
						  </thead>   
						  <tbody>
						  	{% for page in pages %}
								<tr>
									<td>
										<input type="checkbox">
									</td>
									<td class="identifier">

										{{ page.caption}} <span class="label{% if page.status == 'active' %} label-success{% endif %}">{{ page.status}}</span>
										<div class="options">
											<a href="{{ path("carouselForm") }}">Edit</a> | 
											<a href="#">Hide</a> | 
											<a href="">Delete</a>
										</div>
									</td>
									<td><img src="http://placehold.it/200x75"></td>
									<td class="center">
										{{ page.lastModifiedAt|date("d/m/Y")}} by {{ page.lastModifiedBy }}
									</td>
									<td class="center">{{ page.created|date("d/m/Y") }}</td>
								</tr>						  		
						  	{% endfor %}
						  </tbody>
					  </table>            
					</div>
				</div><!--/span-->
			
			</div><!--/row-->
{% endblock body %}